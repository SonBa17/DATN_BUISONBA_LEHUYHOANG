<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <RelativeLayout
            android:id="@+id/rl_layout_1"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            >

            <ImageView
                android:id="@+id/imgAvata"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_avatar" />

            <ImageView
                android:id="@+id/imgexit"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:paddingBottom="5dp"
                android:src="@drawable/icon_log_out" />

            <TextView
                android:textColor="@color/black"
                android:id="@+id/tvXinChao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="14dp"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@id/imgAvata"
                android:text="Xin chào,"
                android:textSize="15sp" />

            <TextView
                android:textColor="@color/black"
                android:id="@+id/username_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvXinChao"
                android:layout_marginLeft="14dp"
                android:layout_toRightOf="@id/imgAvata"
                android:paddingTop="1dp"
                android:textSize="22dp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="70dp"
            android:background="@drawable/plant_background">


            <RelativeLayout
                android:layout_width="396dp"
                android:layout_height="49dp"
                android:layout_marginTop="50dp"
                android:background="@drawable/background_data"
                android:backgroundTint="@color/white">

                <TextView
                    android:id="@+id/tv_Date"
                    android:layout_width="190dp"
                    android:layout_height="40dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="180dp"
                    android:layout_marginBottom="10dp"
                    android:text="Date"
                    android:textSize="21dp"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/tv_Time"
                    android:layout_width="140dp"
                    android:layout_height="40dp"
                    android:textColor="@color/black"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginBottom="10dp"

                    android:text="Time"
                    android:textSize="21dp" />


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="170dp"
                android:layout_height="200dp"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="120dp"
                android:layout_marginBottom="96dp"
                android:background="@drawable/show_data_at_home">

                <ImageView
                    android:id="@+id/img_DoAmKK"
                    android:layout_width="95dp"
                    android:layout_height="95dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="14dp"
                    android:src="@drawable/land_huni" />

                <TextView
                    android:id="@+id/textDAKK"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/img_DoAmKK"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="42dp"
                    android:text="Độ ẩm đất cây 1"
                    android:textSize="17dp"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/tv_DoAmDat1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/img_DoAmKK"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="47dp"
                    android:layout_marginTop="8dp"
                    android:ellipsize="marquee"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:singleLine="true"
                    android:text="123"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="170dp"
                android:layout_height="200dp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="120dp"
                android:layout_marginEnd="21dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="96dp"
                android:background="@drawable/show_data_at_home">

                <ImageView
                    android:id="@+id/img_DoAmDat"
                    android:layout_width="95dp"
                    android:layout_height="95dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="14dp"
                    android:src="@drawable/land_huni" />

                <TextView
                    android:id="@+id/textDAD"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/img_DoAmDat"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="28dp"
                    android:layout_marginTop="42dp"
                    android:text="Độ ẩm đất cây 2"
                    android:textSize="17dp"
                    android:textColor="@color/black"/>

                <TextView
                    android:textColor="@color/black"
                    android:id="@+id/tv_DoAmDat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/img_DoAmDat"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="47dp"
                    android:layout_marginTop="8dp"
                    android:ellipsize="marquee"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:singleLine="true"
                    android:text="123"
                    android:textSize="25dp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/setting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="370dp"
                android:layout_marginBottom="498dp"
                android:background="@drawable/background_data"
                android:backgroundTint="@color/dark_back1">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="170dp"
                    android:layout_height="90dp"
                    android:text="Tình trạng thời tiết"
                    android:textAlignment="center"
                    android:textColor="#508833"
                    android:textSize="30dp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.123"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="MissingConstraints" />

                <ImageView
                    android:id="@+id/img_change_weather"
                    android:layout_width="90dp"
                    android:layout_height="93dp"
                    android:layout_toRightOf="@id/textView2"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.333"
                    app:layout_constraintStart_toEndOf="@+id/textView2"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textView2"
                    android:layout_marginLeft="20dp"
                    android:text="Van nước: "
                    android:textSize="26dp"
                    android:textStyle="bold" />
                <ImageView
                    android:id="@+id/img_notify_pump"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_below="@+id/textView2"
                    android:layout_toRightOf="@id/tv3"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/notify_pump"
                    android:layout_marginTop="10dp"
                    />
            </RelativeLayout>
        </RelativeLayout>


    </RelativeLayout>

</FrameLayout>